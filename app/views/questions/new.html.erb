<section class="content">
  <div class="row">
    <section class="content">
      <div class="box box-warning">
        <div class="box-header with-border">
          <h3 class="box-title">Create Poll</h3>
        </div>
        <div class="box-body">
          <%= form_for(@question, validate: true) do |f| %>

            <% if @question.errors.any? %>
              <% @question.errors.full_messages.each do |message| %>
                <span class="help-block"><%= message %></span>
              <% end %>
            <% end %>

            <div class="form-group">
              <%= f.label :question %>
              <%= f.text_area :text, class: 'form-control', placeholder: 'Text ...' %>
              <%= f.validate %>
            </div>

            <div id="options">
              
              <%= f.fields_for :options do |option| %>
                <%= render 'option_fields', f: option %>
              <% end %>

              <div class="form-group">
                <%= link_to_add_association 'add option', f, :options, class: 'btn btn-primary btn-success btn-sm' %>
              </div>

            </div>

            <div class="form-group">
              <%= f.submit 'Create Poll', class: 'btn btn-primary' %>
            </div>

          <% end %>
        </div>
      </div>
    </section>
  </div>
</section>